<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
   
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <style>
        header
        {
            height:50px;
            background-color:black;  
        }
        .text-center {
            color: white;
            font-size:30px;
        }
        table tr td {
            padding-right: 20px;
            padding-bottom: 20px;
            padding-top: 20px;
        }

        .menu table tr td a {
            color: black;
        }

        .menu table tr td:hover {
            background: #808080;
            color: white;
        }

        .menu table tr td a:hover {
            background: #808080;
            text-decoration: none;
            color: white;
        }

        .form {
            margin-left: 0px !important;
        }
        .content {
            background: #696969;
        }
    </style>
</head>
<body>
    <div>
        <header class="row ">
            <div class="pic d-flex  align-items-center justify-content-center col-md-2">
                <img src="http://devfast.us/images/devfast-logo.png" />
            </div>
            <div class="text-center col-md-10">
                <a>Blogs Management</a>
            </div>
        </header>
        <section>
            <div class="row">
                <div class="menu justify-content-center col-md-2">
                    <form class="form" style="background:white;">
                        <div class="container">
                            <div class="menu">
                                <table>
                                    <tr>
                                        <td id="home"><a href="/blogs/index"><img src="https://cdn.icon-icons.com/icons2/916/PNG/512/Menu_icon_icon-icons.com_71858.png" style=" width:20px; height:20px; margin-right:10px;" />list</a></td>
                                    </tr>
                                    <tr>
                                        <td id="Create"><a href="/Blogs/Create"><img src="https://www.nicepng.com/png/detail/202-2022683_edit-svg-png-icon-free-download-create-icon.png" style="width: 20px; height: 20px; margin-right: 10px;" />New</a></td>
                                    </tr>
                                    <tr>
                                        <td id="Search"><a href="/Blogs/Search"><img src="https://upload.wikimedia.org/wikipedia/commons/3/36/Search_Icon.png" style="width: 20px; height: 20px; margin-right: 10px;" />Search</a></td>
                                    </tr>

                                </table>
                            </div>
                        </div>
                    </form>
                </div>
                <div class="content col-md-10">
                @RenderBody()
                </div>
            </div>
        </section>
        <footer class="row">
            <div class="text-center " style="background: #808080; width:100%;height:50px;">
                <span>Copyright @@ 2021</span><span style="color:blue;">Devfast</span>
            </div>
        </footer>
    </div>
    

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
